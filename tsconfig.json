{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "esnext",

    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["esnext"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "src/types/declarations.d.ts"
  ],
  "exclude": ["node_modules"]
}
