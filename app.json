{
  "expo": {
    "name": "LokalMusic",
    "slug": "lokal-music",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#091227"
    },
    "android": {
      "package": "com.lokal.music",
      "adaptiveIcon": {
        "foregroundImage": "./assets/music-app-icon_02.wepg",
        "backgroundColor": "#091227"
      },
      "permissions": [
        "INTERNET",
        "FOREGROUND_SERVICE",
        "WAKE_LOCK",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "ios": {
      "bundleIdentifier": "com.lokal.music",
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": [
          "audio"
        ]
      }
    },
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "Allow LokalMusic to access your microphone."
        }
      ],
      "expo-font",
      "expo-audio"
    ],
    "extra": {
      "eas": {
        "projectId": "6eca1b98-7361-4156-8ba3-7f135abde003"
      }
    }
  }
}
